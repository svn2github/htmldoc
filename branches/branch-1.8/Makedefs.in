#
# Programs...
#

AR		=	@AR@
AWK		=	@AWK@
CC		=	@CC@
CXX		=	@CXX@
CHMOD		=	@CHMOD@
CP		=	@CP@
LN		=	/bin/ln -sf
MKDIR		=	@MKDIR@ -p
MV		=	@MV@
POST		=	@POST@
RANLIB		=	@RANLIB@
RM		=	@RM@ -f
SHELL		=	/bin/sh

# The extension to use for executables...
EXEEXT		=	@EXEEXT@

#
# Directories...
#

bindir		=	@bindir@
datadir		=	@datadir@
exec_prefix	=	@exec_prefix@
includedir	=	@includedir@
infodir		=	@infodir@
libdir		=	@libdir@
libexecdir	=	@libexecdir@
localstatedir	=	@localstatedir@
mandir		=	@mandir@
oldincludedir	=	@oldincludedir@
prefix		=	@prefix@
sbindir		=	@sbindir@
sharedstatedir	=	@sharedstatedir@
srcdir		=	@srcdir@
sysconfdir	=	@sysconfdir@
top_srcdir	=	@top_srcdir@

#
# Program options...
#
# OPTIM   defines the common compiler optimization/debugging options.
#

ARFLAGS		=	@ARFLAGS@
CFLAGS		=	-I.. @CFLAGS@ $(OPTIM) @JPEGINC@ @PNGINC@ @ZLIBINC@
CXXFLAGS	=	-I.. @CXXFLAGS@ $(OPTIM) @JPEGINC@ @PNGINC@ @ZLIBINC@
LDFLAGS		=	@LDFLAGS@ $(OPTIM)
LIBS		=	@SSLLIBS@ @LIBS@
OPTIM		=	@OPTIM@ @SSLFLAGS@

#
# Rules...
#

.SILENT:
.SUFFIXES:	.a .c .cxx .h .o
.c.o:
	echo Compiling $<...
	$(CC) $(CFLAGS) -c $<
.cxx.o:
	echo Compiling $<...
	$(CXX) $(CXXFLAGS) -c $<

