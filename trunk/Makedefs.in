#
# Programs...
#

AR	=	@AR@
AWK	=	@AWK@
CC	=	@CC@
CXX	=	@CXX@
CHMOD	=	@CHMOD@
CP	=	@CP@
LN	=	/bin/ln -sf
MKDIR	=	@MKDIR@ -p
MV	=	@MV@
RANLIB	=	@RANLIB@
RM	=	@RM@ -f
SHELL	=	/bin/sh

#
# Directories...
#

bindir		=	@bindir@
datadir		=	@datadir@
exec_prefix	=	@exec_prefix@
includedir	=	@includedir@
infodir		=	@infodir@
libdir		=	@libdir@
libexecdir	=	@libexecdir@
localstatedir	=	@localstatedir@
mandir		=	@mandir@
oldincludedir	=	@oldincludedir@
prefix		=	@prefix@
sbindir		=	@sbindir@
sharedstatedir	=	@sharedstatedir@
srcdir		=	@srcdir@
sysconfdir	=	@sysconfdir@
top_srcdir	=	@top_srcdir@

#
# Program options...
#
# OPTIM   defines the common compiler optimization/debugging options.
#

ARFLAGS	=	@ARFLAGS@
CFLAGS	=	@CFLAGS@ $(OPTIM) $(JPEGINC) $(PNGINC) $(ZLIBINC) -I..
CXXFLAGS =	@CXXFLAGS@ $(OPTIM) $(JPEGINC) $(PNGINC) $(ZLIBINC) -I..
LDFLAGS	=	@LDFLAGS@ $(OPTIM)
LIBS	=	@LIBS@
OPTIM	=	@OPTIM@

#
# Rules...
#

.SILENT:
.SUFFIXES:	.a .c .cxx .h .o
.c.o:
	echo Compiling $<...
	$(CC) $(CFLAGS) -c $<
.cxx.o:
	echo Compiling $<...
	$(CXX) $(CXXFLAGS) -c $<

